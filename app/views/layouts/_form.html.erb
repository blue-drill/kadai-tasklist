<%= form_with(model: task, local: true) do |form| %>
  <%= render 'layouts/error_messages', model: form.object %>
  
  <%= form.label :status, 'ステータス' %>
  <%= form.text_field :status %>

  <%= form.label :content, 'タスク' %>
  <%= form.text_field :content %>
  
  <%= form.submit '登録' %>
<% end %>

